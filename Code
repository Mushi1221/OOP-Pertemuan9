``` using System;


class MainClass {
 public static void Main (string[] args) {
    double r = 5.0;
    double s = 10.0;
    double a = 7.0;
    double t = 9.0;
    double p = 6.0;
    double l = 12.0;
    double d1 = 4.0;
    double d2 = 6.0;

    Console.WriteLine("Luas Lingkaran: " + luasLingkaran(r));
    Console.WriteLine("Luas Persegi: " + luasPersegi(s));
    Console.WriteLine("Luas Segitiga: " + luasSegitiga(a, t));
    Console.WriteLine("Luas Persegi Panjang: " + luasPersegiPanjang(p, l));
    Console.WriteLine("Luas Trapesium: " + luasTrapesium(a, p, t));
    Console.WriteLine("Luas Layang-Layang: " + luasLayangLayang(d1, d2));
 }

     // Menghitung luas lingkaran
     static double luasLingkaran(double r)
     {
          return 3.14159 * r * r;
     }
    
     // Menghitung luas persegi
     static double luasPersegi(double s)
     {
          return s * s;
     }
    
     // Menghitung luas segitiga
     static double luasSegitiga(double a, double t)
     {
          return 0.5 * a * t;
     }
    
     // Menghitung luas persegi panjang
     static double luasPersegiPanjang(double p, double l)
     {
          return p * l;
     }
    
     // Menghitung luas trapesium
     static double luasTrapesium(double a, double b, double t)
     {
          return 0.5 * (a + b) * t;
     }
    
     // Menghitung luas layang-layang
     static double luasLayangLayang(double d1, double d2)
     {
          return 0.5 * d1 * d2;
     }
} ```
